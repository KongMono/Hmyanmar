<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="2dp"
    android:gravity="center_horizontal" >
    
    <RelativeLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">
        
        <ImageView android:id="@+id/rowchannel_image"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:scaleType="fitXY"
	        android:background="@drawable/htv_placeholder"/>
    
        <ImageView
            android:id="@+id/rowchannel_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/rowchannel_image"
            android:background="@drawable/btn_delete"
            android:visibility="gone" />
        
    </RelativeLayout>
    
    
    <TextView android:id="@+id/rowchannel_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rowchannel_image"
        android:gravity="center_horizontal"
        android:paddingTop="5dp"
        android:textSize="10dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:text="test" />

</LinearLayout>
